{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CyberGuardian XDR",
  "version": "0.1.0",
  "identifier": "com.cyberguardian.agent",

  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "CyberGuardian XDR",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": true,
        "skipTaskbar": false,
        "devtools": true   // enable inspector
      }
    ],

    "security": {
      "csp": null,
      "dangerousRemoteDomains": [
        "https://cyberguardian-backend-production.up.railway.app"
      ]
    },

    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },

  "allowlist": {
    "shell": {
      "all": true
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
