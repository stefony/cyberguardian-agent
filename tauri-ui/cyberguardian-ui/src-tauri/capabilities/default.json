{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://cyberguardian-backend-production.up.railway.app/*" },
        { "url": "wss://cyberguardian-backend-production.up.railway.app/*" }
      ]
    }
  ]
}